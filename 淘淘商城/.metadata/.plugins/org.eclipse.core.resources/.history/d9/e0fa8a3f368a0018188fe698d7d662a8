    http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
	<!-- 配置包扫描器，扫描所有带@Service注解的类 -->
	<context:component-scan base-package="com.taotao.service"/>
	<!-- 发布dubbo服务 -->
	<!-- 使用dubbo发布服务 -->
	<!-- 提供方应用信息，用于计算依赖关系 -->
